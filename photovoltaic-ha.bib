@Article{en17164145,
	AUTHOR = {Al-Dahidi, Sameer and Madhiarasan, Manoharan and Al-Ghussain, Loiy and Abubaker, Ahmad M. and Ahmad, Adnan Darwish and Alrbai, Mohammad and Aghaei, Mohammadreza and Alahmer, Hussein and Alahmer, Ali and Baraldi, Piero and Zio, Enrico},
	TITLE = {Forecasting Solar Photovoltaic Power Production: A Comprehensive Review and Innovative Data-Driven Modeling Framework},
